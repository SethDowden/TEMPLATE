#!/usr/bin/env bash
set -e
if [[ ! -d "/Volumes/population_research/_LIBRARY/TEMPLATE" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Volumes/population_research/_LIBRARY/TEMPLATE")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Volumes/population_research/_LIBRARY/TEMPLATE" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Volumes/population_research/_LIBRARY/TEMPLATE/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Volumes/population_research/_LIBRARY/TEMPLATE/.envrc" "/Volumes/population_research/_LIBRARY/TEMPLATE/.direnv"/*.rc
